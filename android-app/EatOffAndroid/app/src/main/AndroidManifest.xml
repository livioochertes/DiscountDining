<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EatOff"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Splash Screen Activity -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.EatOff.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.EatOff.Login" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.EatOff" />

        <!-- Restaurant Details Activity -->
        <activity
            android:name=".activities.RestaurantDetailsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Restaurant Menu Activity -->
        <activity
            android:name=".activities.RestaurantMenuActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Vouchers Activity -->
        <activity
            android:name=".activities.VouchersActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Orders Activity -->
        <activity
            android:name=".activities.OrdersActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Profile Activity -->
        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>