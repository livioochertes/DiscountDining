<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EatOff" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_primary</item>
        <item name="colorSecondaryVariant">@color/green_secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/orange_primary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.EatOff.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/orange_primary</item>
        <item name="android:statusBarColor">@color/orange_primary</item>
        <item name="android:navigationBarColor">@color/orange_primary</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- Login Screen Theme -->
    <style name="Theme.EatOff.Login" parent="Theme.EatOff">
        <item name="android:windowBackground">@color/gray_50</item>
    </style>
    
    <!-- Button Styles -->
    <style name="EatOff.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="EatOff.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/orange_primary</item>
        <item name="strokeColor">@color/orange_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Card Styles -->
    <style name="EatOff.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    
    <!-- Text Styles -->
    <style name="EatOff.Text.Title" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="EatOff.Text.Subtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/gray_600</item>
    </style>
    
    <style name="EatOff.Text.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/gray_700</item>
    </style>
    
    <style name="EatOff.Text.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/gray_500</item>
    </style>
    
</resources>